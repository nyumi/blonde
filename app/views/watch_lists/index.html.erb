<h1>WatchLists#index</h1>

<%= form_tag("/search", method: "get") do %>
    検索ワード
    <%= text_field_tag :keywd, '', size:30 %>
    <%= submit_tag '検索' %>

<% end %>


<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>削除</th>
      <th>タイトル</th>
      <th>著者</th>
      <th>出版日</th>
      <th>紙の値段</th>
      <th>紙のポイント</th>
      <th>kindleの出版日</th>
      <th>kindleの値段</th>
      <th>kindleのポイント</th>
    </tr>
  </thead>
  <tbody>
    <% @watch_lists.each do |wlist| %>
      <tr>
        <td><%= image_tag(wlist.img) %></td>
        <td><%= link_to "×", { :action => "destroy", :id => wlist.id }, method: :delete, data: { confirm: 'Are you sure?'} %></td>
        <td><%= wlist.title %></td>
        <td><%= wlist.author %></td>
        <td><%= wlist.publish_date %></td>
        <td><%= link_to wlist.pp_price, wlist.pp_link, target: "_blank" %></td>
        <td><%= wlist.pp_point %></td>
        <td><%= wlist.kd_published_date %></td>
        <td><%= link_to wlist.kd_price, wlist.kd_link, target: "_blank" %></td>
        <td><%= wlist.kd_point %></td>
      </tr>

    <% end %>
  </tbody>
</table>
